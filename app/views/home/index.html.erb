<div class="container">

  <h1 style="text-align: center;">英语单词听写工具</h1>

  <!-- 听写设置  -->
  <div class="col-12">
    <div class="Box color-shadow-small">
      <div class="Box-row">
        <h3 class="m-0">听写设置</h3>
      </div>

      <div class="Box-row">
        <div class="form-group">
          <div class="form-group-header">
            <label for="words">单词列表</label>
          </div>
          <div class="mb-2">使用回车分割, 一行一个单词</div>
          <div class="form-group-body">
            <textarea class="form-control" id="words"></textarea>
          </div>

          <div class="form-group-header" style="margin-top: 10px;">
            <label for="english-type">发音</label>
          </div>
          <div class="form-group-body" style="margin-top: 10px;">
            <input type="radio" name="english-type" value="1" checked> 🇬🇧英音
            <span style="margin-right:10px;"></span>
            <input type="radio" name="english-type" value="0"> 🇺🇸美音
          </div>

          <div class="form-group-header" style="margin-top: 10px;">
            <label for="english-type">打乱顺序播放</label>
          </div>
          <div class="form-group-body" style="margin-top: 10px;">
            <input type="radio" name="disorder" value="0" checked> 顺序
            <input type="radio" name="disorder" value="1"> 乱序
          </div>

          <div class="form-group-header" style="margin-top: 10px;">
            <label for="english-type">单词播放间隔(s)</label>
          </div>
          <div class="form-group-body">
            <input class="form-control" type="number" id="interval" value="3"/>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- 控制台 -->
  <div class="col-12" style="margin-top: 20px;">
    <div class="Box color-shadow-small">
      <div class="Box-row">
        <h3 class="m-0">控制台</h3>
      </div>
      <div class="Box-row">
        <div class="BtnGroup d-block mb-2">
          <button class="BtnGroup-item btn btn-primary" id="start">开始</button>
          <button class="BtnGroup-item btn" id="pause" aria-disabled="true">暂停</button>
          <button class="BtnGroup-item btn btn-danger" id="stop" aria-disabled="true">停止</button>
        </div>
        <div style="margin-bottom: 10px;">
          <span class="Progress Progress--large">
            <span
              id="progress"
              class="Progress-item color-bg-success-emphasis"
              style="width: 0%;">
            </span>
          </span>
        </div>


